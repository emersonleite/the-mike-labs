---
import SectionTitle from '@/components/SectionTitle.astro';
import TeamCard from '@/components/TeamCard.astro';
import { getEntry } from 'astro:content';

const { dark = false } = Astro.props;

const { data } = await getEntry('team', 'team');

const team = data.members;
---

<section id="equipe" class={`py-20 px-6 ${dark ? 'bg-dark-1 text-gray-100' : 'bg-background text-text'}`}>
  <div class="max-w-6xl mx-auto">
    <SectionTitle>Equipe</SectionTitle>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {
        team.map((instructor: { name: string; photo: string; bio: string }, index: number) => (
          <TeamCard key={index} name={instructor.name} photo={instructor.photo} bio={instructor.bio} dark={dark} />
        ))
      }
    </div>
  </div>
</section>

---
import SectionTitle from '@/components/SectionTitle.astro';
import ScheduleCard from '@/components/ScheduleCard.astro';
import { getEntry } from 'astro:content';

const { dark = false } = Astro.props;
const isDark = dark;

const scheduleEntry = await getEntry('schedule', 'schedule');
const { data } = scheduleEntry;
const content = data.schedule;
---

<section id="horarios" class={`py-20 px-6 ${isDark ? 'bg-dark-1 text-white' : 'bg-background text-text'}`}>
  <div class="max-w-6xl mx-auto">
    <SectionTitle>Hor√°rios</SectionTitle>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
      {content.map((day) => <ScheduleCard day={day.day} classes={day.classes} dark={isDark} />)}
    </div>
  </div>
</section>

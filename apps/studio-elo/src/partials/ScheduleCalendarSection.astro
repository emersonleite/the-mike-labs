    <SectionTitle>Horários</SectionTitle>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
      {schedule.map((day) => <ScheduleCard day={day.day} classes={day.classes} dark={isDark} />)}
    </div>
  </div>
</section>

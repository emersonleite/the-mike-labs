---
import SectionTitle from '@/components/SectionTitle.astro';
import Icon from '@/components/icons/Icon.astro';

const { dark = false } = Astro.props;

const mapSrc =
  'https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3602.632107904893!2d-49.26666052460992!3d-25.450560277548743!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x94dce48b2be7a1af%3A0x7b6c372ac637feee!2sR.%20Chile%2C%201603%20-%20Rebou%C3%A7as%2C%20Curitiba%20-%20PR%2C%2080220-180!5e0!3m2!1spt-BR!2sbr!4v1751561767433!5m2!1spt-BR!2sbr';
---

<section id="onde" class={`py-20 px-6 ${dark ? 'bg-dark-1 text-gray-100' : 'bg-background text-text'}`}>
  <div class="max-w-6xl mx-auto">
    <SectionTitle>Onde Estamos</SectionTitle>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-10 items-stretch">
      <div class="rounded-2xl overflow-hidden shadow-xl border border-border h-full min-h-[380px]">
        <iframe
          class="w-full h-full"
          loading="lazy"
          src={mapSrc}
          width="600"
          height="450"
          style="border: 0"
          allowfullscreen
          referrerpolicy="no-referrer-when-downgrade"></iframe>
      </div>

      <div
        class="bg-dark-2 text-gray-100 rounded-2xl shadow-xl border border-border p-8 flex flex-col justify-center space-y-8"
      >
        <div class="flex items-start gap-4">
          <Icon name="mdi:map-marker" class="text-primary" size="1.5rem" label="Endereço" />
          <div>
            <h3 class="text-xl font-bold mb-1 text-primary">Endereço</h3>
            <p>R. Chile, 1603, loja 3</p>
            <p>Rebouças</p>
            <p>Curitiba - PR</p>
          </div>
        </div>

        <div class="flex items-start gap-4">
          <Icon name="mdi:clock-time-four-outline" class="text-primary" size="1.5rem" label="Horários" />
          <div>
            <h3 class="text-xl font-bold mb-1 text-primary">Horários</h3>
            <p>Segunda à Sexta: 08:40h - 21:00h</p>
            <p>Sábado: 09:00h - 10:00h</p>
          </div>
        </div>

        <div class="flex items-start gap-4">
          <Icon name="mdi:phone" class="text-primary" size="1.5rem" label="Contato" />
          <div>
            <h3 class="text-xl font-bold mb-1 text-primary">Contato</h3>
            <p>WhatsApp: (41) 9 9977-0628</p>
            <p>Email: studioeloalcantara1@gmail.com</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
